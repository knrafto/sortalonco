.sidebar
  font-size: 12pt

  a
    text-decoration: none

  > ul
    padding: .5em 0em
    margin: 0px

    > li
      list-style: none
      padding: .25em

      > a
        padding-left: 10px

      > a.active
        padding-left: 8px
        border-left: 2px solid #{colorAccent}

      > a:hover
        padding-left: 8px
        border-left: 2px solid #{colorAccentDark}
