.sidebar-container
  flex: 1 0

.sidebar
  font-size: 12pt

  > ul
    padding: .5em 0em
    margin: 0

    > li
      list-style: none
      padding: .25em

      > a
        padding-left: 10px

      > a.active
        padding-left: 8px
        border-left: 2px solid #{colorAccent}

      > a:hover
        padding-left: 8px
        border-left: 2px solid #{colorAccentDark}

@media all and (max-width: 600px)
  .sidebar-container
    flex: 1 100%

  .sidebar
    position: relative
