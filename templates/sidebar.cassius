.sidebar.affix
  top: 0px


.sidebar
  font-size: 12pt

  > ul
    padding: 1em

    > li
      list-style: none
      margin: .5em

      > a
        padding-left: 10px

      > a.active
        padding-left: 8px
        border-left: 2px solid #428bca

      > a:hover
        padding-left: 8px
        border-left: 2px solid #426baa
        text-decoration: none
